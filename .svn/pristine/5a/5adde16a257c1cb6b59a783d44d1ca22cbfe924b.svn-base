<script>
		apiready = function(){
			var tel = document.getElementById('tel').value;
			var code = document.getElementById('code').value;
		}




 /***********************点击登录**********************************/
    document.getElementById("userButton").onclick= function (){
        var tel = document.getElementById('tel').value;
        var code = document.getElementById('code').value;
		var imgButt=0;
		var ipt=document.getElementById("ipt");


        if(!checkMobileNum(tel)){
            toast("手机号码不正确");
            return;
        }

        if(isBlack(code)){
            toast("验证码不正确");
            return;
        }
		if(ipt.checked == false){
			toast("你还没有同意协议");
			return;
		}
        api.showProgress();
        var params = {
            phone : tel,
            authCode : code
//            type:1
        };

        ajaxGet(userLoginUrl,params,function(ret,err) {
//            alert(JSON.stringify(err));
            api.hideProgress();
            if (ret && ret.id) {
                var user = ret;
                cleanDb(function (ret, err) {
                    setUserInfo(user);
                    api.execScript({
                        name: rootWindowName,
                        script: 'reloadHtml();'
                    });
                    closeWin();
                    bindPush();
                });
                closeWin();
            } else {
                var msg = "出错了，请稍后。";
                if (ret && ret.msg) {
                    msg = ret.msg;
                }
                api.toast({
                    msg: msg
                }); 
            }
        })
    };
    /***********************点击登录**********************************/
        //点击跳转注册
//    document.getElementsByClassName("submit2")[0].onclick=function(){
//        alert(66);
//        openNewWindow("register","./register.html")
//    };

    /********************获取验证码*******************/
    var flag=true;
    document.getElementById("sms").onclick=
        function register(){
        if(!flag){
            return;
        }
        flag = false;
        var tel = $api.byId('tel').value;
        if(!checkMobileNum(tel)){
            toast("手机号码不正确");
            return;
        }
        ajaxGet(userCreateAuthCodeUrl,{
            phone : tel
        },function(ret){
            if(ret){
           //     alert(JSON.stringify(ret));
                setTime();
                $api.setStorage(Storage_Sms_Time,new Date().getTime());
            } else {
                flag = false;
                var msg="出错了，请稍后。";
                if(ret&&ret.msg){
                    msg=ret.msg;
                }
                api.toast({
                    msg :msg
                });
            }
        });
    }
    /********************获取验证码*******************/

    /*******************倒计时****************************/
    function setTime(){
        var time;
        var sms = document.getElementById('sms');
        sms.style.backgroundColor = '#fff';
        time=time||60;
        sms.innerHTML = time+"s";
        var codeInterval =  setInterval(function(){
            if(time > 0){
                time--;
                sms.innerHTML =time+"s";
            }else{
                sms.style.backgroundColor = "#fff";
                sms.innerHTML = "获取";
                clearInterval(codeInterval);
            }
        },1000)
    }
    /*******************倒计时****************************/





</script>
