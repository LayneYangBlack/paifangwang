<script type="text/html" id="commentContent">
    <!--<%for(var i=0;i < list.length;i++){%>-->
    <!--<div class="comment_content"style="border-bottom: 1px #F2F2F2 solid;" onclick="setReply(<%=list[i].uid %>,'<%=list[i].userName %>');">-->
