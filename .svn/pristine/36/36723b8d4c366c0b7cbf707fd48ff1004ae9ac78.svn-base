<script>
    var hid= {};
    var Hid = {};
    var param = {};
    var chatBox;
    var userName;
    var user;
    var type = 1;
    var toUid = 0;
    var allResult={};
	apiready = function () {
        Hid = api.pageParam;
        hid.hid = Hid.hid;
        initCheckBox();
        user = getUserInfo();
        new datalistModel(addDataToHtml,Hid.commentPager,hid,10,5,100,true);
	};

    function addDataToHtml(results,append){
        alert(JSON.stringify(results))
        if(results && results.length > 0){
            for(var i=0;i<results.length;i++){
//                results[i].endTime = formatTimeToDay(results[i].endTime);
                allResult[results[i].id]=results[i];
            }
        }
        var data = {list: results};

        var html = template('commentContent',data);
        if (append) {
            document.getElementById('main').innerHTML =document.getElementById('main').innerHTML + html;
        } else {
            document.getElementById('main').innerHTML = html;
        }
    }


    //评论框
    function initCheckBox(){
      chatBox = api.require('UIChatBox');
        chatBox.open({
            placeholder: '评论',
            maxRows: 4,
            emotionPath: 'widget://image/emotion',
            styles: {
                inputBar: {
                    borderColor: '#F0F0F0',
                    bgColor: '#FFFFFF'
                },
                inputBox: {
                    borderColor: '#F5F6FA',
                    bgColor: '#F5F6FA'
                },
                emotionBtn: {
                    normalImg: 'widget://image/chatBox_face1.png'
                },
                keyboardBtn: {
                    normalImg: 'widget://image/chatBox_key1.png'
                },
                indicator: {
                    target: 'both',
                    color: '#c4c4c4',
                    activeColor: '#9e9e9e'
                },
                sendBtn: {                         //（可选项）JSON对象；发送按钮样式，本参数对 IOS 平台上的键盘内发送按钮无效
                    bg: '#ffffff',                 //（可选项）字符串类型；发送按钮背景颜色，支持rgb、rgba、#、img；默认：#4cc518
                    titleColor: '#F88125',          //（可选项）字符串类型；发送按钮标题颜色；默认：#ffffff
                    activeBg: '#ffffff',            //（可选项）字符串类型；发送按钮背景颜色，支持rgb、rgba、#、img；默认：无
                    titleSize: 14                    //（可选项）数字类型；发送按钮标题字体大小；默认：13
                }
            }
        }, function (ret, err) {
            //点击发送按钮
            if (ret.eventType == 'send') {
                if ($api.trimAll(ret.msg).length != 0) {
                  sendComment(ret.msg);
                    chatBox.closeKeyboard();
                } else {
                    api.toast({
                        msg: '消息不能为空',
                        duration: 2000,
                        location: "top"
                    });
                }
            }
        });

        //监听弹出事件
        chatBox.addEventListener({
            target: 'inputBar',
            name: 'move'
        }, function (ret, err) {
            if(!checkUserLogin()){
                chatBox.closeKeyboard();
            }
        });

        chatBox.addEventListener({
            target: 'inputBar',
            name: 'showEmotion'
        }, function (ret, err) {
            if(!checkUserLogin()){
                chatBox.closeBoard();
            }
        });

    }

    //回复
    function setReply(replyUid,replyName){
        if(user.id == replyUid){
            return;
        }

        toUid = replyUid;
        toUserName = replyName;
        type = 2;

        chatBox.setPlaceholder({placeholder:"回复"+replyName+":"});
        chatBox.popupKeyboard();
    }
    function sendComment(text){
        if(isBlack(text)){
            api.toast({msg:"亲，还没输入内容。"});
            return;
        }
//        if(user.uid == toUid){
//            chatBox.setPlaceholder({placeholder:"评论"});
//            return;
//        }
//			alert(utf16toEntities(text));
        var param = {
            hid:hid.hid,
            toUid : toUid,
            type:type,
            content : text,
            userName:userName
        };
        var params = {
            hid :hid.hid,
            content : text,
            uid:user.id,
            userName:user.name,
            commentType:1,
            userIcon:user.icon

        };
        var commentUrl1 = Hid.commentUrl;
        if(toUid > 0){
            commentUrl1 = Hid.commentReply;
            params.toUid = toUid;
            params.toUserName = toUserName;
            params.commentType=2
        }

        var data = {list: [params]};
        var html = template('commentContent', data);



//        if(toUid > 0){
//            commentUrl = commentUrl;
//            params.toUid = toUid;
//            params.toUserName = toUserName;
//        }
  //      alert(JSON.stringify(params))
        ajaxGet(commentUrl1,params,function(ret){
            if(ret){
                $api.byId('main').style.display = 'block';
                $api.byId('main').innerHTML = html + $api.byId('main').innerHTML;
//                reloadHtml();

            }else{
                api.toast({msg:"失败,请稍后重试"});
            }
        });

        chatBox.setPlaceholder({placeholder:"评论"});
        toUid = 0;
        toUserName = "";
    }
</script>
