	<script type="text/javascript" charset="utf-8">
	apiready = function() {
		var cityData =$api.getStorage()
		//选择城市
			var UICityList = api.require('UICityList');
			UICityList.open({
				rect: {
					x: 0,
					y: 0,
					w: api.frameWidth,
					h: api.frameHeight
				},
				resource: path_shopCity,
				styles: {
					searchBar: {
						bgColor: '#696969',
						cancelColor: '#E3E3E3'
					},
					location: {
						color: '#696969',
						size: 14
					},
					sectionTitle: {
						bgColor: '#eee',
						color: '#000',
						size: 14
					},
					item: {
						bgColor: '#fff',
						activeBgColor: '#696969',
						color: '#000',
						size: 16,
						height: 40
					},
					indicator: {
						bgColor: '#fff',
						color: '#696969'
					}
				},
				currentCity: '北京',
				locationWay: 'GPS',
				hotTitle: '热门城市',
				fixedOn: api.frameName,
				placeholder: '输入城市名或首字母查询'
			}, function(ret, err) {
				if(isNotBlack(ret.cityInfo)) {
					city = ret.cityInfo.city;
					$api.setStorage("cityID",ret.cityInfo);
				//	alert(JSON.stringify(ret));
					api.execScript({
						name: rootWindowName,
						script: 'showCity('+JSON.stringify(city)+')'
					});
					api.closeFrame({
						name: 'cityList'
					});
				}


			});

	}
	</script>

