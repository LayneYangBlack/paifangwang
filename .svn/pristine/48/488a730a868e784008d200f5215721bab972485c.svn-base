function getVisitor(callback){
    api.ajax({
        url: loginVisitorUrl,
        method: 'post',
        timeout: 60,
        dataType: 'json',
        returnAll: false,
        headers: {
            "Accept-Encoding": "gzip",
            "version" : version,
            "type" :   1
        },
        data: {}
    }, function (ret, err) {
        if(isNotBlack(ret) && ret.token){
         //   alert(JSON.stringify(ret));
            setUserInfo(ret);
            callback();
        }else{
            api.confirm({
                title: '当前网络或服务有问题',
                msg: '是否重试？',
                buttons:['确定', '取消']
            },function(ret,err){
                if(ret.buttonIndex == 1){
                    getVisitor(callback);
                }else{
                    closeApp();
                }
            });
        }
    });
}






