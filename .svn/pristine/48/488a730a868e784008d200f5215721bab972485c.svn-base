        function createCityJson(cityList){
            var jsonCity = {};
            jsonCity.citys = [];

            for (var i = 0; i < cityList.length; i++) {
                jsonCity.citys.push({city: cityList[i].name, id: cityList[i].id});
            }
            var cityJSON = JSON.stringify(jsonCity);
//              alert(cityJSON)
            //把城市数据写入index页面
            var fs = api.require('fs');
            fs.remove({
                path: path_shopCity
            }, function (ret, err) {
                fs.createFile({
                    path: path_shopCity
                }, function (ret, err) {
                    if (ret.status) {
                        fs.open({
                            path: path_shopCity,
                            flags: 'read_write'
                        }, function (ret, err) {
                            if (ret.status && ret.fd) {
                                var fd = ret.fd;
                                fs.write({
                                    fd: fd,
                                    data: cityJSON,
                                    offset: 0
                                }, function (ret, err) {
                                    fs.close({
                                        fd: fd
                                    }, function (ret, err) {
                                    });
                                });
                            }
                        });
                    }
                });
            });
        }


