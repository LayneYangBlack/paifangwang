body{
    margin: 0;
    padding: 0;
    color: #333;
    font-size:62.5%;
    background: #ededed;
}

div.screening{
    width: 100%;
    overflow: hidden;
    background: #fff;
    position: absolute;
    z-index: 4;
    top: 0;
}
div.screening>ul{
    margin: 0;
    padding: 0;
    list-style-type: none;
    border-bottom: solid 1px #efefef;
    border-top: solid 1px #efefef;
    overflow: hidden;
}
div.screening>ul>li{
    float: left;
    width: 24.5%;
    /*text-align: center;*/
	height:3rem;
    line-height: 3rem;
    border-left: solid 1px #eee;
    font-size: 14px;
    color:#2a2a32;
    background: url("../icon/Triangle_3.png") no-repeat 85% 18px;
    background-size: 13px;
}
/* grade */
.grade-eject,.moreul,.Sortul,.Brandul{
    position:absolute;
    left: -200%;
    top: 63px;
    width: 100%;
/*    height: 100%;*/
    z-index: 1;
    -webkit-transition-duration: 0.4s;
    background: #fff;
}
.moreul,.Sortul,.Brandul{
	height: auto;
	left: -450px;
	font-size: 14px;
	background: #fff;
}

.moreul ul li{
	width:20%;
	height:38px;
	border: 1px solid #ebebeb;
	float: left;
	margin-left: 3.7%;
	border-radius: 5px;
	text-align: center;
	line-height: 36px;
	font-size: 14px;
	color: #565656;
}
.moreul{
	top:50px;
}
.moreul .first{
	border: 1px solid #ea7a79;
	color:#ea7a79;
}
.moreul .buy li:nth-child(5){
	margin-top: 10px;
}
.moreul .buy li:nth-child(6){
	margin-top: 10px;
}
.ways li:nth-child(5){
	margin-top: 10px;
}
.ways li:nth-child(6){
	margin-top: 10px;
}
.ways li:nth-child(7){
	margin-top: 10px;
}
.ways li:nth-child(8){
	margin-top: 10px;
}
.buy{
	overflow: hidden;
	
}
.way{
	width: 100%;
	height: 95px;
	border-top: 1px solid #ebebeb;
	border-bottom: 1px solid #ebebeb;
	margin-top: 14px;
}
.title{
	padding: 13px;text-indent:10px;color: #a8a8a8;font-size: 12px;
}
.bottom_left,.bottom_right{
	color: #fff;
	width:42%;
	background: #f54343;
	height: 38px;
	font-size: 16px;
	margin-right: 4%;
	text-align: center;
	line-height: 38px;
	float:right;
	border-radius: 5px;
}
.bottom{
	overflow: hidden;
	padding: 10px 0;
}
.bottom_left{
	float: left;
	margin-left: 4%;
	background: #ffffff;
	color: #969696;
	border: 1px solid #ebebeb;
}
#con .Sortul li,#con .Brandul li{
	width: 100%;
	border-bottom: 1px solid #eee;
	line-height: 50px;
	height: 50px;
	text-indent: 30px;
}
.grade-eject>ul,.Category-eject>ul,.Sort-eject>ul{
    margin: 0;
    padding: 0;
    overflow: auto;
    height: 298px;
    width: 100%;
    -webkit-transition-duration: 0.4s;
}
#con .grade-eject>ul>li,#con .Category-eject>ul>li,#con .Sort-eject>ul>li{
    line-height: 50px;
    height: 50px;
    font-size: 14px;
    padding-left: 1rem;
    border-bottom: solid 1px #eee;
    /*border-top: solid 1px #eee;*/
}
.grade-eject>ul.grade-w,.Category-eject>ul.Category-w{
    background: #fff;
    position: absolute;
    z-index: 1;
}
.grade-eject>ul.grade-t,.Category-eject>ul.Category-t{
    background: #fff;
    position: absolute;
    z-index: 2;
    left: 100%;
}
.grade-eject::before{
	content: "";
	position: absolute;
	top: -10px;
	left: 15%;
	border-bottom: 10px solid #fff;
	border-left: 7px solid transparent;
	border-right: 7px solid transparent;
}
.Sortul::before{
	content: "";
	position: absolute;
	top: -10px;
	left:65%;
	border-bottom: 10px solid #fff;
	border-left: 7px solid transparent;
	border-right: 7px solid transparent;
}
.Brandul::before{
	content: "";
	position: absolute;
	top: -10px;
	left: 40%;
	border-bottom: 10px solid #fff;
	border-left: 7px solid transparent;
	border-right: 7px solid transparent;
}
.Moreul::before{
	content: "";
	position: absolute;
	top: -10px;
	right: 7%;
	border-bottom: 10px solid #fff;
	border-left: 7px solid transparent;
	border-right: 7px solid transparent;
}
.grade-eject>ul.grade-s,.Category-eject>ul.Category-s{
    background: #fff;
    position: absolute;
    z-index: 3;
    left: 100%;
    list-style-type: none;
}
.grade-eject>ul.grade-s>li,.Category-eject>ul.Category-s>li{
    border-bottom: solid 1px #eee;
    margin-left: 1rem;
    padding: 0;
}
.grade-w-roll{
	left: 0;
}

