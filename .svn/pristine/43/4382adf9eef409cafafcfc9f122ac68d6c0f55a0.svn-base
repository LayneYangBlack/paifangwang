<script type="text/javascript">
        var money;
        var eventId;
        apiready = function(){
            urlJson = api.pageParam;
            //显示需要支付的金额
            document.getElementById('budget').innerHTML = api.pageParam.fee;
            var promise = {};
            //判断用户
            promise.egid = urlJson.egid
            alert(JSON.stringify(urlJson))
            if(urlJson.egid == 0){

            }else{
                // alert(promise.egid)
                ajaxGetWithProgress(ensureGoldLoadUrl,promise,function(ret,err){
                    if(isNotBlack(ret)){
                        // alert(JSON.stringify(ret))
                        if(ret.oid == 0){
                        }else{
                            if(ret.payType == 1){
                                var payType = "alipay"
                                var payParams = {};
                                payParams.oid = ret.oid;
                                pay(payType,payParams,ensureGoldAlipayUrl,function(ret,err) {
                                    if(ret){
                                        // alert(JSON.stringify(ret))
                                        showDialog_1();
                                    };
                                });
                            }else{
                                var payType = "weixin"
                                var payParams = {};
                                payParams.oid = ret.oid;
                                pay(payType,payParams,ensureGoldWxpayUrl,function(ret,err) {
                                    if(ret){
                                        showDialog_1();
                                    }
                                });
                            }
                        }
                        // alert(JSON.stringify(ret));
                        // payParams.egid = ret.id;
                        // oid = ret.oid;
                    }else{
                        alert(JSON.stringify(err))
                    };
                })
            }
            
        }
        function openCommitTip(){
            openNewWindow("selectPosition","./selectPosition.html",{})
        }
        var params = null;
        var orderId = null;
        var type = 0;
        var payParams = {};
        var payparms = {};
        var detailType = null;
        var num = 0;
        function selectPay(){
            var payType = num;
            payParams.payType  = num+1;
            payParams.hid = urlJson.hid;
            // if(oid == 0){
            ajaxGetWithProgress(urlJson.submitUrl,payParams,function(ret,err){
                if(isNotBlack(ret)){
                    var egidJson = {};
                    egidJson.egid = ret.id;
                    ajaxGetWithProgress(ensureGoldLoadUrl,egidJson,function(ret,err){
                        if(isNotBlack(ret)){
                            if(ret.payType == 1){
                                var payType = "alipay"
                                var payParams = {};
                                payParams.oid = ret.oid;
                                pay(payType,payParams,ensureGoldAlipayUrl,function(ret,err) {
                                    if(ret){
                                        // alert(JSON.stringify(ret))
                                        showDialog_1();
                                    };
                                });
                            }else{
                                var payType = "weixin"
                                var payParams = {};
                                payParams.oid = ret.oid;
                                pay(payType,payParams,ensureGoldWxpayUrl,function(ret,err) {
                                    if(ret){
                                        showDialog_1();
                                    }
                                });
                            }
                        }else{}
                    })
                }else{
                };
            });
            
        };
        
      /***************钱包支付****************/
       function wallet(){
       	var ss = budget.innerHTML;
       			if(ss > money){
	                showDialog("","提示","钱包余额不足，是否要充值","取消","确定",function(){
	             	 	openNewWindow("MyMoney","./MyMoney.html");   
	                });
	           }else{
	            	openNewWindow("cashcode","./cashcode.html",payparms);
	        
	  	}		              
    }
            
//     /**********************支付宝支付成功时候的提示信息*************/
     function showDialog_1(){
        dialogBox = api.require('dialogBox');
        dialogBox.alert ({
            texts: {
                title: '温馨提示',
                content:'支付成功！',
                rightBtnTitle: '确定'
            },
            styles:{
                bg: '#fff',
                w: 300,
                title:{
                    marginT : 20,
                    titleSize : 18,
                    corner: 1,
                    titleColor : '#39bc30'
                },
                content:{
                    color: '#000',
                    size: 16
                },
                right:{
                    w: 300,
                    h: 40,
                    marginL: 0,
                    marginB: 0,
                    corner: 1,
                    bg: '#39bc30',
                    size: 18,
                    color:'#ffffff'
                }
            }
        },function(ret){
        	if (ret.eventType == 'right') {
//              var dialogBox = api.require('dialogBox');
                dialogBox.close ({
                    dialogName: 'alert'
                });
                setTimeout(function(){
                    closeWin();
                },1000);
            }
        });
    }

    //选择支付方式
    var item = document.querySelectorAll('.item1');

    item[0].style.color = "#39bc30";
    item[0].querySelector('i').className = "icon_right1";
    function clicked(self,type){
        num = type;
        for(var n = 0;n < item.length;n++){
            item[n].style.color = "#333";
            item[n].querySelector('i').className = "";
        }
        self.style.color = "#39bc30";
        self.querySelector('i').className = "icon_right1";
    }
    var question = document.getElementById("question")
    var budget = document.getElementById("budget")
    //当下一步被点击的时候 判断num的值是否为2
    //如果是2，用户就是选择的钱包支付
